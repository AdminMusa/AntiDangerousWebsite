{
  "manifest_version": 3,
  "name": "Block Scam Websites",
  "version": "1.0",
  "description": "Blocks known scam websites and displays a warning message.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],  // Runs on all websites
      "js": ["content.js"]
    }
  ]
}
